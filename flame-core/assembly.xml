<assembly>
    <id>bin</id>
    <formats>
        <format>tar.gz</format>
    </formats>
    <dependencySets>
        <dependencySet>
            <useProjectArtifact>true</useProjectArtifact>
            <outputDirectory>lib</outputDirectory>
            <useProjectAttachments>true</useProjectAttachments>
            <includes>
                <include>com.homework.da:bigdata-tools</include>
                <include>org.apache.hbase:hbase-client</include>
                <include>org.apache.hbase:hbase-common</include>
                <include>org.apache.hbase:hbase-server</include>
                <include>org.apache.hbase:hbase-hadoop2-compat</include>
                <include>redis.clients:jedis</include>
                <include>mysql:mysql-connector-java</include>
                <include>org.apache.commons:commons-pool2</include>
                <include>org.apache.commons:commons-collections4</include>
                <include>org.apache.commons:commons-dbcp2</include>
                <include>commons-dbutils:commons-dbutils</include>
                <include>com.sksamuel.elastic4s:elastic4s-http_2.11</include>
                <include>com.sksamuel.exts:exts_2.11</include>
                <include>com.sksamuel.elastic4s:elastic4s-core_2.11</include>
                <include>org.elasticsearch.client:elasticsearch-rest-client</include>
                <include>com.typesafe:config</include>
                <include>org.scala-lang:scalap</include>
            </includes>
        </dependencySet>
        <dependencySet>
            <!--
               不使用项目的artifact，第三方jar不要解压
            -->
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>lib</outputDirectory>
            <useProjectAttachments>true</useProjectAttachments>
            <scope>provided</scope>
        </dependencySet>
    </dependencySets>
    <fileSets>
        <fileSet>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>README.md</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/deploy</directory>
            <outputDirectory>/</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/src/main/python</directory>
            <outputDirectory>bin</outputDirectory>
        </fileSet>
        <!-- 把项目自己编译出来的jar文件，打包进gz文件的lib目录 -->
        <fileSet>
            <directory>${project.build.directory}</directory>
            <outputDirectory>lib</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
        </fileSet>
    </fileSets>
